<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <!--
      org.freedesktop.impl.portal.IdleMonitor:
      @short_description: Idle monitor portal backend interface

      The idle monitor portal allows sandboxed applications to detect whether
      the user is actively interacting with the device.
  -->
  <interface name="org.freedesktop.impl.portal.IdleMonitor">
    <!--
        AddIdleWatch:
        @handle: Object path for the #org.freedesktop.impl.portal.Request object representing this call
        @app_id: App id of the application
        @options: Vardict with optional further information
        @response: Numeric response
        @results: Vardict with the results of the call

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>interval x</term>
            <listitem><para>
              Idle time in milliseconds before the watch is fired.
            </para></listitem>
          </varlistentry>
        </variablelist>

        The following results get returned via the @results vardict:
        <variablelist>
          <varlistentry>
            <term>watch_id s</term>
            <listitem><para>
              A new watch identifier.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="AddIdleWatch">
      <arg type="o" name="handle" direction="in"/>
      <arg type="s" name="app_id" direction="in"/>
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="u" name="response" direction="out"/>
      <arg type="a{sv}" name="results" direction="out"/>
    </method>

    <!--
        AddUserActiveWatch:
        @handle: Object path for the #org.freedesktop.impl.portal.Request object representing this call
        @app_id: App id of the application
        @response: Numeric response
        @results: Vardict with the results of the call

        The following results get returned via the @results vardict:
        <variablelist>
          <varlistentry>
            <term>watch_id s</term>
            <listitem><para>
              A new watch identifier.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="AddUserActiveWatch">
      <arg type="o" name="handle" direction="in"/>
      <arg type="s" name="app_id" direction="in"/>
      <arg type="u" name="response" direction="out"/>
      <arg type="a{sv}" name="results" direction="out"/>
    </method>

    <!--
        GetIdletime:
        @handle: Object path for the #org.freedesktop.impl.portal.Request object representing this call
        @app_id: App id of the application
        @response: Numeric response
        @results: Vardict with the results of the call

        The following results get returned via the @results vardict:
        <variablelist>
          <varlistentry>
            <term>idletime x</term>
            <listitem><para>
              Idle time in milliseconds.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="GetIdletime">
      <arg type="o" name="handle" direction="in"/>
      <arg type="s" name="app_id" direction="in"/>
      <arg type="u" name="response" direction="out"/>
    </method>

    <!--
        RemoveWatch:
        @handle: Object path for the #org.freedesktop.impl.portal.Request object representing this call
        @app_id: App id of the application
        @watch_id: A watch identifier to remove
    -->
    <method name="RemoveWatch">
      <arg type="o" name="handle" direction="in"/>
      <arg type="s" name="app_id" direction="in"/>
      <arg type="u" name="watch_id" direction="in"/>
    </method>

    <!--
        WatchFired:
        @watch_id: A watch identifier
    -->
    <signal name="WatchFired">
      <arg type="u" name="watch_id"/>
    </signal>
  </interface>
</node>
