<node name="/" xmlns:doc="http://www.freedesktop.org/dbus/1.0/doc.dtd">
  <!--
      org.freedesktop.portal.IdleMonitor:
      @short_description: Portal for monitoring session activity

      This interface allows sandboxed applications to detect whether the user
      is actively interacting with the device.

      This documentation describes version1 of this interface.
  -->
  <interface name="org.freedesktop.portal.IdleMonitor">
    <!--
        AddIdleWatch:
        @options: Vardict with optional further information
        @handle: Object path for the #org.freedesktop.portal.Request object
          representing this call

        Adds an idle watch, which will fire after the given amount of inactivity. The
        #org.freedesktop.portal.IdleMonitor::WatchFired signal will run when the idle
        watch is fired.

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>handle_token s</term>
            <listitem><para>
              A string that will be used as the last element of the @handle. Must be a valid
              object path element. See the #org.freedesktop.portal.Request documentation for
              more information about the @handle.
            </para></listitem>
          </varlistentry>
          <varlistentry>
            <term>interval x</term>
            <listitem><para>
              Idle time in milliseconds before the watch is fired.
            </para></listitem>
          </varlistentry>
        </variablelist>

        The following results get returned via the #org.freedesktop.portal.Request::Response signal:
        <variablelist>
          <varlistentry>
            <term>watch_id s</term>
            <listitem><para>
              A new watch identifier.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="AddIdleWatch">
      <arg type="x" name="interval" direction="in"/>
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <!--
        AddUserActiveWatch:
        @options: Vardict with optional further information
        @handle: Object path for the #org.freedesktop.portal.Request object
          representing this call

        Adds a user active watch, which will fire when the user next interacts with the
        device. The #org.freedesktop.portal.IdleMonitor::WatchFired signal will run when
        the user active watch is fired.

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>handle_token s</term>
            <listitem><para>
              A string that will be used as the last element of the @handle. Must be a valid
              object path element. See the #org.freedesktop.portal.Request documentation for
              more information about the @handle.
            </para></listitem>
          </varlistentry>
        </variablelist>

        The following results get returned via the #org.freedesktop.portal.Request::Response signal:
        <variablelist>
          <varlistentry>
            <term>watch_id s</term>
            <listitem><para>
              A new watch identifier.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="AddUserActiveWatch">
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <!--
        GetIdletime:
        @options: Vardict with optional further information
        @handle: Object path for the #org.freedesktop.portal.Request object
          representing this call

        Gets the idle time in milliseconds.

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>handle_token s</term>
            <listitem><para>
              A string that will be used as the last element of the @handle. Must be a valid
              object path element. See the #org.freedesktop.portal.Request documentation for
              more information about the @handle.
            </para></listitem>
          </varlistentry>
        </variablelist>

        The following results get returned via the #org.freedesktop.portal.Request::Response signal:
        <variablelist>
          <varlistentry>
            <term>watch_id s</term>
            <listitem><para>
              A new watch identifier.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="GetIdletime">
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <!--
        RemoveWatch:
        @watch_id: A watch identifier to remove
        @options: Vardict with optional further information

        Remove an idle watch or user active watch.

        Supported keys in the @options vardict include:
        <variablelist>
          <varlistentry>
            <term>handle_token s</term>
            <listitem><para>
              A string that will be used as the last element of the @handle. Must be a valid
              object path element. See the #org.freedesktop.portal.Request documentation for
              more information about the @handle.
            </para></listitem>
          </varlistentry>
        </variablelist>
    -->
    <method name="RemoveWatch">
      <arg type="u" name="watch_id" direction="in"/>
      <arg type="a{sv}" name="options" direction="in"/>
      <arg type="o" name="handle" direction="out"/>
    </method>

    <!--
        WatchFired:
        @watch_id: A watch identifier

        The WatchFired signal runs when a watch added by
        #org.freedesktop.portal.IdleMonitor::AddIdleWatch or
        #org.freedesktop.portal.IdleMonitor::ActiveUserWatch is fired.
    -->
    <signal name="WatchFired">
      <arg type="u" name="watch_id"/>
    </signal>

    <property name="version" type="u" access="read"/>
  </interface>
</node>
